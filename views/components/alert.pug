.flex.flex-col.alerts
  .origin.alert.hidden
    .flex.flex-row
      .head-icon 
        +icon('')
      .grow  Hello World!
      .close-btn 
        +icon('M6 18L18 6M6 6l12 12')

script.
  $('.origin.alert .close-btn').on('click', function() {
      $(this).parent().parent().toggle()
    })

  function alert_danger(info, timeout) {
    const alert = $('.origin.alert').clone(true)

    // add danger remove origin
    alert.addClass('danger')
    alert.removeClass('origin')

    alert.find('.head-icon path').attr('d', 'M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z')

    $('.alerts').append(alert)
    alert.toggle()
    alert.find('.grow').text(info)
    if (timeout && timeout > 0) {
      setTimeout(function() {
        alert.toggle(false)
      }, timeout)
    }
  }

  function alert_success(info, timeout=1000) {
    const alert = $('.origin.alert').clone(true)

    // add danger remove origin, and set icon
    alert.addClass('success')
    alert.removeClass('origin')
    alert.find('.head-icon path').attr('d', 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z')

    $('.alerts').append(alert)

    alert.toggle()
    alert.find('.grow').text(info)
    if (timeout && timeout > 0) {
      setTimeout(function() {
        alert.toggle(false)
      }, timeout)
    }
  }
