+modal('modal-signup', 'Signup')
  .info.hidden
    .flex.flex-row
      .title.font-semibold.mr-4
      .message.font-normal

  form#form-signup(data-parsley-validate).flex.flex-col.space-y-1
    label(for="email") Email * :
    input(type="email" class="form-control" name="email" data-parsley-trigger="change" required)

    label(for="password") Password * :
    input#password(type="password" class="form-control" name="password" data-parsley-trigger="change" data-parsley-password required)
    label(for="password") Re-enter Password * :
    input(type="password" class="form-control" name="re-password" data-parsley-trigger="change" data-parsley-equalto="#password" required)

    label(for="nickname") Nickname * :
    input(type="text" class="form-control" name="nickname" data-parsley-trigger="change" data-parsley-minlength="4" data-parsley-maxlength="12" required)

    .flex.flex-row.justify-end
      input.mt-4.btn(type="submit" value="Signup")
