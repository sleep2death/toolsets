extends html

block content
  section.header
  section.main
    .content-row
      .h-center
        .panel
          form.pt-4#signup(method="post" action='/signup')
            .animated-label
              input(type="email", id="email", name= 'email', required)
              label(for="email") Email
            .animated-label
              input(type="password", id="pwd", name="pwd", required)
              label(for="password") Password
            .animated-label
              input(type="text", id="nickname", name="nickname", required)
              label(for="nickname") Nickname
            .mt-4
              input.submit-btn(type="submit" value="Signup")
          .flex.flex-row.justify-end
            span or
            a.ml-2.underline.text-sky-500(href='/login') Login
  section.footer

block script
  script
    include ../node_modules/jquery/dist/jquery.min.js
    include ../node_modules/detect-autofill/dist/detect-autofill.js
  script
    include dist/utils.js
    include dist/signup.js
