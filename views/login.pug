extends html

block content
  section.header
  section.main
    .content-row
      .h-center
        .panel
          form.pt-4#login(method="post" action='/login')
            .animated-label
              input(type="email", id="email", name= 'email', required)
              label(for="email") Email
            .animated-label
              input(type="password", id="pwd", name='pwd', required)
              label(for="password") Password
            .mt-4
              input.submit-btn(type="submit" value="Login")
          .flex.flex-row.justify-end
            span.text-slate-600 or
            a.ml-1.underline.text-sky-500(href='/signup') Signup
  section.footer

block script
  script
    include ../node_modules/jquery/dist/jquery.min.js
    include ../node_modules/detect-autofill/dist/detect-autofill.js
  script
    include dist/utils.js
    include dist/login.js
