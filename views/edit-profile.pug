section.header
  include components/header
  include components/icon
section.main.overflow-y-auto
  .content-row
    .h-top
      .panel
        .font-semibold.select-none.text-sm.pb-2.border-b.flex.flex-row
          +icon('M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z')
          span Profile
        #avatar.px-10.py-4
        form.mt-2#profile(method="post" data-email=target.email)
          .animated-label.enabled.mt-0
            input(type="text", id="seed", name="seed", required value= target.avatar_seed? target.avatar_seed : user.nickname)
            label(for="seed") Avatar seed
          .animated-label.enabled
            input(type="email", id="email", name= 'email', required value= target.email)
            label(for="email") Email
          .animated-label.enabled
            input(type="text", id="nickname", name="nickname", required value= target.nickname)
            label(for="nickname") Nickname
          .mt-4
            input.submit-btn(type="submit" value="Update")
      .flex.flex-col.w-full.space-y-4
        .panel
          .font-semibold.select-none.text-sm.pb-2.border-b.flex.flex-row
            +icon('M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21')
            span Password
          form.mt-6#password(method="post" data-email=target.email)
            .animated-label
              input(type="password", id="n-password", name="n-password", required)
              label(for="n-password") New Password
            .animated-label
              input(type="password", id="r-password", name="r-password", required)
              label(for="r-password") Re-enter Password
            .mt-4
              input.submit-btn(type="submit" value="Update")
        .panel
          .font-semibold.select-none.text-sm.pb-2.border-b.flex.flex-row
            +icon('M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z')
            span Staff
          form.mt-6#staff(method="post" data-email=target.email)
            label(for="role") User Role
            input.selectMode(name="role" value=target.role required)
            .mt-4
              input.submit-btn(type="submit" value="Update")
section.footer
script.
  document.title = 'Edit Profile'
script
  include ../node_modules/@yaireo/tagify/dist/tagify.min.js
  include dist/edit-profile.js
style
  include ../node_modules/@yaireo/tagify/dist/tagify.css
