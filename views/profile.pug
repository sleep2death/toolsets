section.header
  include components/header
  include components/icon
section.main.overflow-y-auto
  .content-row
    .h-top
      .panel
        .font-semibold.select-none.text-sm.pb-2.border-b.flex.flex-row
          +icon('M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z')
          span Profile
        #avatar.px-10.py-4
        form.mt-2#profile(method="post" action='/profile')
          .animated-label.enabled.mt-0
            input(type="text", id="seed", name="seed", required value= user.avatar_seed? user.avatar_seed : user.nickname)
            label(for="seed") Avatar seed
          .animated-label.enabled
            input(type="email", id="email", name= 'email', required value= user.email)
            label(for="email") Email
          .animated-label.enabled
            input(type="text", id="nickname", name="nickname", required value= user.nickname)
            label(for="nickname") Nickname
          .mt-4
            input.submit-btn(type="submit" value="Update")
      .flex.flex-col.w-full.space-y-4
        .panel
          .font-semibold.select-none.text-sm.pb-2.border-b.flex.flex-row
            +icon('M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21')
            span Password
          form.mt-2#password(method="post" action='/profile')
            .animated-label.mt-0
              input(type="password", id="o-password", name="o-password", required)
              label(for="o-password") Old Password
            .animated-label
              input(type="password", id="n-password", name="n-password", required)
              label(for="n-password") New Password
            .animated-label
              input(type="password", id="r-password", name="r-password", required)
              label(for="r-password") Re-enter Password
            .mt-4
              input.submit-btn(type="submit" value="Update")
        if user.role === 'admin'
          .panel
            .font-semibold.select-none.text-sm.pb-2.border-b.flex.flex-row
              +icon('M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z')
              span Admin Area
            .flex.flex-row.space-x-4.text-sky-500.underline.mt-2
              a Application
              a(href='/admin/users') Users
section.footer
script.
  document.title = 'Profile'
script
  include dist/profile.js
