mixin button(id, path, title)
  include icon
  button.h-10.flex.flex-col.justify-center.bg-slate-200(
    class="hover:text-gray-800 hover:font-semibold hover:border hover:border-slate-400",
    id=id
  )
    .w-32.flex.flex-row.justify-center.text-gray-600
      +icon(path)
      .text-gray-600.select-none= title
